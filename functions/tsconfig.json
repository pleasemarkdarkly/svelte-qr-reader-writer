{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
  },
  "compileOnSave": true,
  "include": [
    ".eslintrc.js",
    "src",
  ],
  "exclude": [
    "**/__tests__/**",
    "**/__tests__/mock/**"
  ]
}